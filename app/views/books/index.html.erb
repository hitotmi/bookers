<div><%= flash[:notice] %></div>

<div class="head">
<h1>Books</h1>
</div>
<table>
  <div class="heading">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </div>
  <div class="main">
     <% @books.each do |book| %>
     <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you OK?" %></td>
     </tr>
     <% end %>
    </div>
</table>

<h1>New Table</h1>
