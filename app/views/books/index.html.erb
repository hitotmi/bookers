<div class="head">
<h1>Books</h1>
</div>
<table>
  <div class="heading">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </div>
  <div class="main">
     <% @books.each do |book| %>
     <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you OK?" %></td>
     </tr>
     <% end %>
    </div>
</table>


<h1>New Table</h1>
<%= form_with model: @book do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
